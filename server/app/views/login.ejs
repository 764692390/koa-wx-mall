<!DOCTYPE html>
<html lang="zh-cmn-Hans">
<%- include('./common/head.ejs') %>
<body style="background-color: #ffffff;">
	<header class="wy-header">
		<div class="wy-header-icon-back"><a href="javascript:window.history.back();"></a></div>
		<div class="wy-header-title">登录商城</div>
		<div class="wy-header-icon-index"><a href="/"></a></div>
	</header>
	
	<div class="weui-cells weui-cells_form" style="padding-top: 44px;margin-top: 0px;">
		<div class="weui-cell" style="font-size: 14px;">
			<div class="weui-cell__hd" ><label class="weui-label">手机号</label></div>
			<div class="weui-cell__bd">
				<input class="weui-input" type="number" placeholder="请输入手机号" id="mobile" name="mobile"/>
			</div>
		</div>
		<div class="weui-cell weui-cell_vcode" style="font-size: 14px; display:none;">
			<div class="weui-cell__bd" >
				<input class="weui-input" type="" placeholder="请输入验证码">
			</div>
			<div class="weui-cell__ft">
				<a href="javascript:;" class="weui-vcode-btn" style="font-size: 14px;width: 90px;text-align:center;">获取验证码</a>
			</div>
		</div>
		<div class="weui-cell" style="font-size: 14px;">
			<div class="weui-cell__hd" ><label class="weui-label">密<span style="margin-left: 13px;">码</span></label></div>
			<div class="weui-cell__bd">
				<input class="weui-input" type="password" placeholder="请您输入密码" id="password" name="password"/>
			</div>
		</div>
		<div class="weui-cell weui-cell_vcode" style="font-size: 14px;">
			<div class="weui-cell__hd" ><label class="weui-label">验证码</label></div>
			<div class="weui-cell__bd">
				<input class="weui-input" id="code" name="code" placeholder="请输入验证码"/>
			</div>
			<div class="weui-cell__ft">
				<img class="weui-vcode-img btnCode" src="/api/v1/user/code?t=<%= new Date().getTime() %>" />
			</div>
		</div>
		<div class="weui-cell weui-cell_vcode">
		</div>
		<a href="" id="hideHref" style="display:none"></a>
		<div class="weui-btn-area" >
			<a class="weui-btn weui-btn_primary" href="javascript:" id="loginBtn" style="font-size: 14px;height:39px;"><i id="loginLoading"></i>登 录</a>
			<a class="weui-btn weui-btn_default" href="/reg" id="" style="font-size: 14px;height:39px;">注 册</a>
		</div>
		
		<label for="remember" class="weui-agree" style="font-size: 13px;">
			<input id="remember" type="checkbox" class="weui-agree__checkbox" >
			<span class="weui-agree__text" >
				记住登录
			</span>
			
			<span class="weui-agree__text" style="float:right;">
				<a href="javascript:void(0);">忘记密码？</a>
			</span>
		</label>
		
	</div>

	<div class="weui-msg__extra-area">
		<div class="weui-footer">
			<p class="weui-footer__text">Copyright &copy; 2018-2019 lzhop</p>
		</div>
	</div>

	<%- include('./public-tip.ejs') %>
	<script src="<%= base.cdn %>/js/app/public-tip.js?v=<%= base.version %>" ></script>
	<script src="<%= base.cdn %>/js/app/login.js?v=<%= base.version %>" ></script>

</body>
</html>
