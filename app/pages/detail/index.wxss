/**index.wxss**/
page{
    background: #efefef;
    width: 100%;
    min-height: 100%;
    -webkit-overflow-scrolling: touch;
}

.header{
    position: fixed;
    top:0;
    left: 0;
    height: 110rpx;
    line-height: 110rpx;
    width: 100%;
    padding-top: 40rpx;
    background: #69c3aa;
    color: #fff;
    text-align: center;
    font-size:36rpx;
    z-index: 1;
}
.goods-container{
    position: relative;
    top: 160rpx;
    padding: 10rpx 24rpx;
}
.goods-title{
    font-size: 38rpx;
    text-align: center;
    text-shadow: 0 0 8px #000;
    color: white;
    padding-top: 20rpx;
}
.bark-img-box{
    width: 100rpx;
    height: 150rpx;
    position: absolute;
    left: 40rpx;
    top:0;
    z-index: 1;
}
.bark-img{
    width: 22rpx;
    height: 40rpx;
    position: absolute;
    top:80rpx;
    left: 0rpx;
}

.wxParse-p{
    padding: 24rpx;
    box-sizing: border-box;
}

