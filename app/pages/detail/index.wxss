/**index.wxss**/
page{
    background: #efefef;
    width: 100%;
    height: 100%;
}
.container {
  display: block;
  min-height: 100%;
}
.header{
    position: fixed;
    top:0;
    left: 0;
    height: 110rpx;
    line-height: 110rpx;
    width: 100%;
    padding-top: 40rpx;
    background: #69c3aa;
    color: #fff;
    text-align: center;
    font-size:36rpx;
    z-index: 1;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.goods-container{
    position: relative;
    top: 160rpx;
    padding: 10rpx 24rpx;
}
.goods-title{
    font-size: 38rpx;
    text-align: center;
    text-shadow: 0 0 8px #000;
    color: white;
    padding-top: 20rpx;
}
.bark-img{
    width: 22rpx;
    height: 40rpx;
    position: absolute;
    top:80rpx;
    left: 40rpx;
}

