/**index.wxss**/
page{
    background: #efefef;
    width: 100%;
    height: 100%;
    overflow: hidden;
    -webkit-overflow-scrolling: touch;
}

::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}
.container {
  display: block;
  min-height: 100%;
}
.header{
    position: fixed;
    top:0;
    left: 0;
    height: 110rpx;
    line-height: 110rpx;
    width: 100%;
    padding-top: 40rpx;
    background: #69c3aa;
    color: #fff;
    text-align: center;
    font-size:36rpx;
    z-index: 1;
}

.goods-container{
  padding-top:150rpx;
  position: relative;
  display: flex;
  justify-content: space-between;  
  flex-wrap:wrap;
  box-sizing: content-box;
}
.goods-box{
  width: 100%;
  background-color: #fff;
  overflow: hidden;
  margin-bottom: 64rpx;
  border-radius:5px;
  padding:30rpx;

}
.goods-box .img-box{
  width: 100%;
  overflow: hidden;
}
.goods-box .img-box image{
  width: 100%;
}
.goods-box .goods-right{
    width: 100%;
    min-height: 200rpx;
    padding: 20rpx;
    box-sizing: border-box;
}
.goods-box .goods-title{
  width: 100%;
  /* text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden; */
  font-size: 42rpx;
  padding-bottom: 20rpx;
  color: #333;
}
.goods-box .goods-text{
    font-size: 32rpx;
    color: rgba(0, 0, 0, 0.4);
    line-height: 1.444;
}
.goods-box .goods-timer{
    padding-top: 20rpx;
    text-align:right;
    color: rgba(0, 0, 0, 0.4);
    font-size: 28rpx;

}
.no-more-goods{
    text-align: center;
    line-height: 40rpx;
    font-size: 28rpx;
}